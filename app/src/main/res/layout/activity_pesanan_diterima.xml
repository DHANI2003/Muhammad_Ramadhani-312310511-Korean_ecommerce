<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F6A6A">

    <!-- Icon -->
    <ImageView
        android:id="@+id/icon_check"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_check_circle_24" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_check"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Pesanan Diterima"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Pesanan mu sudah diterima dan akan segera\ndisiapkan silahkan menunggu sebentar ya"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textAlignment="center" />

    <!-- Button Lihat Pesanan -->
    <Button
        android:id="@+id/btn_lihat_pesanan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Lihat Pesanan"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black" />

    <!-- Button Pesan Lainnya -->
    <Button
        android:id="@+id/btn_pesan_lainnya"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_lihat_pesanan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Pesan Lainnya"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white" />

    <!-- Quantity Selector -->
    <LinearLayout
        android:id="@+id/quantity_selector"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#D32F2F"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Minus Button -->
        <Button
            android:id="@+id/btn_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <!-- Quantity Text -->
        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="40%"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Plus Button -->
        <Button
            android:id="@+id/btn_plus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

</RelativeLayout>
